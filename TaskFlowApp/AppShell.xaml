<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TaskFlowApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TaskFlowApp"
    xmlns:pages="clr-namespace:TaskFlowApp.Pages"
    Title="" IsVisible="False">

    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate pages:DashBoardPage}"
        Route="DashBoardPage" />
    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate pages:CompanyDashboardPage}"
        Route="CompanyDashboardPage" />
    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate pages:ReportsPage}"
        Route="ReportsPage" />
    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate pages:TasksPage}"
        Route="TasksPage" />
    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate pages:MessagesPage}"
        Route="MessagesPage" />
    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate pages:NotificationsPage}"
        Route="NotificationsPage" />

</Shell>
