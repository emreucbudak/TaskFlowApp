<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskFlowApp.MainPage"
             BackgroundColor="#101922"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout 
            Padding="24"
            Spacing="0"
            VerticalOptions="Center"
            MaximumWidthRequest="448">

            <!-- Logo Section -->
            <VerticalStackLayout 
                Spacing="24"
                HorizontalOptions="Center"
                Margin="0,0,0,32">

                <!-- Logo Icon -->
                <Image
                    Source="https://www.logoai.com/uploads/icon/2021/08/06/732ca933-7df8-43e8-b085-69466243c919.png"
                    WidthRequest="64"
                    HeightRequest="64"
                    Aspect="AspectFit"
                    HorizontalOptions="Center"/>

                <!-- Title and Subtitle -->
                <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                    <Label 
                        Text="TaskFlow"
                        FontSize="24"
                        FontAttributes="Bold"
                        TextColor="White"
                        HorizontalOptions="Center"/>
                    <Label 
                        Text="Kurumsal Yönetim Sistemi"
                        FontSize="14"
                        TextColor="#94a3b8"
                        HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </VerticalStackLayout>

            <!-- Welcome Header -->
            <VerticalStackLayout 
                Spacing="8" 
                Margin="0,16,0,32"
                HorizontalOptions="Center">
                <Label 
                    Text="Tekrar Hoşgeldiniz"
                    FontSize="30"
                    FontAttributes="Bold"
                    TextColor="White"
                    HorizontalTextAlignment="Center"/>
                <Label 
                    Text="Devam etmek için lütfen giriş bilgilerinizi giriniz."
                    FontSize="14"
                    TextColor="#94a3b8"
                    HorizontalTextAlignment="Center"
                    MaximumWidthRequest="350"/>
            </VerticalStackLayout>

            <!-- Login Form -->
            <VerticalStackLayout Spacing="24">

                <!-- Email Field -->
                <VerticalStackLayout Spacing="8">
                    <Label 
                        Text="E-posta"
                        FontSize="14"
                        FontAttributes="Bold"
                        TextColor="#cbd5e1"
                        Margin="4,0,0,0"/>
                    <Border 
                        BackgroundColor="#1e293b80"
                        Stroke="#334155"
                        StrokeThickness="1"
                        Padding="16,0"
                        HeightRequest="56">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                            <Label 
                                Grid.Column="0"
                                Text="📧"
                                FontSize="20"
                                TextColor="#94a3b8"
                                VerticalOptions="Center"/>
                            <Entry 
                                Grid.Column="1"
                                x:Name="EmailEntry"
                                Placeholder="ornek@sirket.com"
                                PlaceholderColor="#64748b"
                                Text="{Binding Email}"
                                TextColor="White"
                                BackgroundColor="Transparent"
                                VerticalOptions="Center"
                                VerticalTextAlignment="Center"
                                Keyboard="Email"/>
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <!-- Password Field -->
                <VerticalStackLayout Spacing="8">
                    <Label 
                        Text="Şifre"
                        FontSize="14"
                        FontAttributes="Bold"
                        TextColor="#cbd5e1"
                        Margin="4,0,0,0"/>
                    <Border 
                        BackgroundColor="#1e293b80"
                        Stroke="#334155"
                        StrokeThickness="1"
                        Padding="16,0"
                        HeightRequest="56">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                            <Label 
                                Grid.Column="0"
                                Text="🔒"
                                FontSize="20"
                                TextColor="#94a3b8"
                                VerticalOptions="Center"/>
                            <Entry 
                                Grid.Column="1"
                                x:Name="PasswordEntry"
                                Placeholder="••••••••"
                                PlaceholderColor="#64748b"
                                Text="{Binding Password}"
                                TextColor="White"
                                BackgroundColor="Transparent"
                                VerticalOptions="Center"
                                VerticalTextAlignment="Center"
                                IsPassword="True"/>
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <!-- Sign In Button -->
                <Button 
                    Text="Giriş Yap"
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="#137fec"
                    TextColor="White"
                    CornerRadius="12"
                    HeightRequest="56"
                    Margin="0,16,0,0"
                    Command="{Binding LoginCommand}"/>

                <ActivityIndicator
                    IsRunning="{Binding IsBusy}"
                    IsVisible="{Binding IsBusy}"
                    Color="#137fec"/>

                <Label
                    Text="{Binding ErrorMessage}"
                    TextColor="#f87171"
                    FontSize="13"
                    HorizontalTextAlignment="Center"/>

            </VerticalStackLayout>

            <!-- Footer -->
            <Label 
                FontSize="12"
                TextColor="#64748b"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Margin="0,32,0,0">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Kurumsal güvenlik protokolleri ile korunmaktadır."/>
                        <Span Text="&#10;"/>
                        <Span Text="Yetkisiz erişim yasaktır."/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
