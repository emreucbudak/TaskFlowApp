<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskFlowApp.MainPage" BackgroundColor="#111819">

    <Grid>
        <Border WidthRequest="500" HeightRequest="500" BackgroundColor="#F1F5F9" StrokeShape="RoundRectangle 20"
        Stroke="Transparent"
        StrokeThickness="2" >
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="30">
                <Image Source="https://logostack.com/wp-content/uploads/designers/Mjcreation235/1-png-1-900x600.png" WidthRequest="150" HeightRequest="150" />
                <Entry Placeholder="Kullanıcı Adı Giriniz" WidthRequest="400" BackgroundColor="White" />
                <Entry Placeholder="Şifre Giriniz" WidthRequest="400" IsPassword="True" BackgroundColor="White" />
                <Button Text="Giriş Yap" WidthRequest="400" BackgroundColor="#007AFF" TextColor="White" />
            </VerticalStackLayout>
        </Border>
    </Grid>

</ContentPage>
